<body class="homepage">	
	<p class="right far-right">
			<%= link_to trips_path do %>
			<i class="fa fa-calendar"></i> My Trips
			<% end %>
	</p>

	<div id="homepage-header" class="row">
		<div class="col-md-4 col-md-offset-4">
			<div id="load_pg" class="well center">
					<h1>Let's Explore!</h1>
			</div>
		</div>	
	</div>

	<div class="invisible" id="sample_destinations">
		<div class ="container">

			<div class="row destination_header">
				<div class="center">
					<h1>Sample Destinations</h1>
				</div>
			</div>

			<div class="row center">
				<div class="col-md-12 center">
					<div class="panel-body" id="map-canvas"></div>
				</div>		
			</div>

			<div class="row center">
				<div class="col-md-4">
					<div class="well homepage-well" id="atlanta_box">
						<h3> Atlanta, Georgia </h3>
						<%= image_tag "atl.jpeg", class: "images" %>
						<%= image_tag "atl_stone_mtn.jpeg", class: "images" %>
						<%= image_tag "ga_aquarium.jpeg", class: "images" %>
					</div>
				</div>

				<div class="col-md-4">
					<div class="well homepage-well" id="caracas_box">
						<h3> Caracas, Venezuela </h3>
						<%= image_tag "caracas_monument.jpeg", class: "images" %>
						<%= image_tag "caracas_teleferico.jpeg", class: "images" %>
						<%= image_tag "caracas_view.jpeg", class: "images" %>
					</div>
				</div>

				<div class="col-md-4">
					<div class="well homepage-well" id="london_box">
						<h3> London, UK </h3>
						<%= image_tag "london.jpeg", class: "images" %>
						<%= image_tag "london_eye.jpeg", class: "images" %>
						<%= image_tag "london_stonehenge.jpeg", class: "images" %>
					</div>
				</div>
			</div>

			<div class="row center">
				<div class="col-md-4 col-md-offset-1">
					<div class="well homepage-well" id="nairobi_box">
						<h3> Nairobi, Kenya </h3>
						<%= image_tag "nairobi_natl_museum.jpeg", class: "images" %>
						<%= image_tag "nairobi_natl_park.jpeg", class: "images" %>
						<%= image_tag "nairobi_view.jpeg", class: "images" %>
					</div>
				</div>
				<div class="col-md-4 col-md-offset-1">
					<div class="well homepage-well" id="bali_box">
						<h3> Bali, Indonesia </h3>
						<%= image_tag "bali.jpeg", class: "images" %>
						<%= image_tag "bali_waterpark.jpeg", class: "images" %>
						<%= image_tag "bali_ocean.jpeg", class: "images" %>
					</div>
				</div>
			</div>
		</div>
	</div>
</body>