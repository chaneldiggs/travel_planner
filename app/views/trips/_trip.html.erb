<div class="col-md-4 col-md-offset-4">
	<div class="trip-well center">
		<h3><%= link_to trip.name, trip, class: "trip-link" %></h3>
		<p><%= trip.dates %></p>
		<p><%= trip.return_date %></p>
		<p><%= trip.city %>, <%= trip.country %></p>
		<p><%= link_to 'Edit', edit_trip_path(trip), remote: true %> |
	<%= link_to 'Destroy', trip, remote: true, method: :delete, data: { confirm: 'Are you sure?' } %></p>
	</div>
</div>
