<%= form_for(contact) do |f| %>
  <% if contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

    <div class="form-group">
      <%= f.text_field :name, placeholder: "Name", autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.text_field :phone_number, placeholder: "Phone Number" %>
    </div>

    <div class="form-group">
      <%= f.text_field :email, placeholder: "Email Address" %>
    </div>

    <p>Emergency Contact:</p>

    <div class="form-group">
      <%= f.text_field :em_contact, placeholder: "Name" %>
    </div>

    <div class="form-group">
      <%= f.text_field :em_number, placeholder: "Phone Number" %>
    </div>

    <div class="form-group">
      <%= f.text_area :notes, placeholder: "Any Notes?" %>
    </div>

    <div class="form-group">
      <strong>Upload a photo</strong>
      <%= f.file_field :image %>
    </div>

    <div class="field">
      <%= f.hidden_field :user_id, value: current_user.id %>
    </div>



    <div class="actions">
      <%= submit_tag "Create Contact", class: "btn btn-primary" %>
    </div>
<% end %>
