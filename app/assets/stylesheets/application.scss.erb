 @import "bootstrap-sprockets";
 @import "bootstrap";
 @import "font-awesome";

html,
body {
	height: 100%;
	background: url(<%= asset_path "globes.jpeg" %>), no-repeat center center fixed;
	background-size: cover;
	color: white;
}

#atlanta_test {
	height: 100%;
	background: url(<%= asset_path "atl.jpeg" %>), no-repeat center center fixed;
	background-size: cover;
}


.world_map {
	width: 100%;
}

.row {
	height: 200px;
}

.center {
	text-align: center;
}

.vertical_center {
	vertical-align: middle;
}

#map-canvas {
	width: 100%;
	height: 300px;
	margin-top: 20px;
	margin-bottom: 20px;
}

.images {
	display: block;
	width: 100%;
	overflow: hidden;
}

.well {
	background-color: rgba(109, 109, 108, 0.5);
}

#invisible {
	display: none;
}

.destination_header {
	height: 60px;
}


