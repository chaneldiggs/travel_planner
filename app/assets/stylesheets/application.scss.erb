 @import "bootstrap-sprockets";
 @import "bootstrap";
 @import "bootstrap-datetimepicker";
 @import "font-awesome";



body.homepage {
	height: 100%;
	background: url(<%= asset_path "cave2.jpg" %>) no-repeat center center fixed;
	background-size: cover;
}


.world_map {
	width: 100%;
}

.row {
	height: 200px;
}

.center {
	text-align: center;
}

.middle-center {
	margin-top: 300px;
}


.vertical_center {
	vertical-align: middle;
	padding-left: 0;
	padding-right: 0;
}

.right {
	float: right;
}

#map-canvas {
	width: 100%;
	height: 300px;
	margin-top: 20px;
	margin-bottom: 20px;
}

#map-canvas2 {
	width: 100%;
	height: 300px;
	margin-bottom: 20px;
}

/*#map-canvas3 {
	width: 40%;
	height: 300px;
	margin-bottom: 20px;
	float: right;
}*/

.images {
	display: block;
	width: 100%;
	height: 150px;
	overflow: hidden;
	position: relative;
}

.homepage-images {
	display: block;
	width: 150px;
	height: 150px;
}

.trip-photo {
	width: 250px;
}

.globe {
	width: 500px;
	height: 500px;
}

.well {
	opacity: .4;
}

.homepage-well {
	opacity: .8;
}

.trip-link {
	text-decoration: none;
	color: black;
}

.add-trip-link {
	text-decoration: none;
	color: white;
}


#invisible {
	display: none;
}

#homepage-header {
	margin-bottom: 0;
}

.destination_header {
	height: 60px;
}

.location-header {
	border-top-style: solid;
	border-bottom-style: solid;
}

.weather {
	border-style: solid;
	border-color: silver;
}

.trip-well {
	border-style: solid;
	border-color: silver;
	padding: 10px;
}
