 @import "bootstrap-sprockets";
 @import "bootstrap";
 @import "bootstrap-datetimepicker";
 @import "font-awesome";


/*application */
.center {
	text-align: center;
}

.middle-center {
	margin-top: 300px;
}

.vertical_center {
  margin: auto;
  position: absolute;
  top: 0; left: 0; bottom: 0; right: 0;
}

.right {
	float: right;
}

.left {
	float: left;
}

.far-right {
	padding-left: 250px;
}

.add-spacing {
	margin-right: 50px;
	margin-left: 50px;
}

.images {
	display: block;
	width: 100%;
	height: 150px;
	overflow: hidden;
	position: relative;
	opacity: 0.7;
}

.white {
	color: white;
}

.bottom_margin {
	margin-bottom: 50px;
}


/*homepage */
body.homepage {
	height: 100%;
	background: url(<%= asset_path "cave2.jpg" %>) no-repeat center center fixed;
	background-size: cover;
}

#map-canvas {
	width: 100%;
	height: 300px;
	margin-top: 20px;
	margin-bottom: 20px;
}

#map-canvas2 {
	width: 100%;
	height: 350px;
	margin-bottom: 20px;
	position: relative;
}

.homepage-images {
	display: block;
	width: 150px;
	height: 150px;
}

.homepage-well {
	position: relative;
	width: 100%;
	padding: 20px;
	background-color: rgba(0, 0, 0, 0.5);
}

#destination_city {
	position: absolute;
	z-index: 1;
	top: 55px;
	font-size: 35px;
	width: 90%
}



/*trip */
.trip-photo {
	width: 250px;
}

.trip_box {
	padding-bottom: 25px;
	margin-top: 20px;
}

.globe {
	width: 500px;
	height: 500px;
}

.well {
	opacity: .6;
}


.trip-link {
	text-decoration: none;
	color: black;
}

.add-trip-link {
	text-decoration: none;
	float: right;
}


#invisible {
	display: none;
}

#inline {
	display: inline-flex;
}

#homepage-header {
	margin-bottom: 0;
}

#load_itinerary {
	text-decoration: underline;
}

.destination_header {
	height: 60px;
}

.location-header {
	border-top-style: solid;
	border-bottom-style: solid;
	margin-bottom: 20px;
}

.border {
	border-style: solid;
	border-color: #E4DE29;
}

.trip_border {
	border: 4px solid #65895C;
}

.timeline_photo {
	border: 5px solid #E4DE29;
	padding: 10px;
}

.flights {
	border: 5px solid #E4DE29;
	
}

#add_partner, .add_activity_link, #add_photo {
	color: #516D4A;
}

.trip-well {
	border-style: solid;
	border-color: silver;
	padding: 10px;
}

.itinerary {
	margin-top: 20px;
	margin-bottom: 20px;
	padding-top: 10px;
	padding-bottom: 10px;
	border-top-style: solid;
	border-bottom-style: solid;
}

.photos {
	border-top-style: solid;
}

.partners {
	border-bottom-style: solid;
}


.show-images {
	margin: 15px;
	width: 200px;
	height: 100px;
}

.col-md-8 {
	float: right;
}

.show-row {
	margin-bottom: 5px;
	margin-right: 5px;
	margin-left: 5px;
	text-align: center;
}

.parner_form {
	height: 0;
	width: 0;
}

.partner_images {
	width: 75px;
}

.contact-pics {
	width: 50px;
	margin: auto;
}


